#include<iostream>
using namespace std;

bool isEven (int a) {
  //even  = 1, odd = 0
  
  if (a&1) {
    return 0;   //odd
  }
  else {
    return 1; //even
  }
}

int main() {
  int number;
  cin >> number;

  if (isEven(number) {
    cout << "number is even";
  }
  else {
    cout << "number is odd";
  }
} 
