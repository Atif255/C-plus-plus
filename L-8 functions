#include<iostream>
using namespace std;

int power () {
  int a, b;
  cin >> a >> b;
  int answer = 1;
  for (int i = 1; i<=b; i++) {
    answer = answer * a;
  }
  return answer; 
}
int main () {
  int ans = power();
  cout << ans;
  ans = power();
  cout << ans;
  ans = power();
  cout << ans;
}
