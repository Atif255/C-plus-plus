#include <iostream>
using namespace std;
int main()
{
int n;
    cout << "enter n"<<endl;
    cin >> n;
    int i=1;
    while (i <=n)
    {
      // first triangle
        int j=1;
        while (j<=n-i+1)
        {
            cout << j;
            j = j + 1;
        }
      // printing **
        int k = 1;
        while (k < i)
        {
            cout << "*";
            k = k + 1;
        }

      
        int m=1;
        while (m<i)
        {
            cout<<"*";
            m=m+1;
        }

      //second triangle
        int s =1;
        while (s<=n-i+1)
        {cout<<n-s+-i+2;
        s=s+1;
            
        }
        
        
        cout<<endl;
        i = i + 1;
    }

    }
    
