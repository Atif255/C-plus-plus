#include <iostream>
using namespace std;

int binarysearch(int arr[], int size, int key) {
  int start = 0;
  int end = size-1;
  int mid = start + (end-start)/2;

  while(start<=end) {
    if (arr[mid] == key ) {
      return mid;
    }
    if (arr[mid]>key) {
      start =mid+1;
    }
    else {
      end = mid-1;
    }
    mid = start + (end-start)/2;
  }
  return -1;
}

int main() {
  int even[6] = {9,8,6,5,2,0};
  int odd[5] = {6,5,1,3,0};

  int evenindex = binarysearch(even,6,0);
  cout << evenindex << endl;

  int oddindex = binarysearch(odd,6,55);
  cout << oddindex << endl;
  
}

